{% extends 'base.html.twig' %}

{% block title %}Les aliments{% endblock %}
{% block monTitle %} 
{% if isModif %}
    Modification {{alim.name}}
    {% else %}
    Creation d'un nouvelle aliment
{% endif %}
{% endblock %}

{% block body %}
<div class="container">
{{form_start(form)}}
<div class="row">
    <div class="col-6">

        {% if isModif %}
        <img src="{{asset('img/aliments/' ~ alim.img)}}" alt="" style="width: 90px">
        {% endif %}
        
        
        <div>{{form_row(form.imgFile)}}</div>
        <div>{{form_row(form.name, {"attr" : {'class':'text-danger bg-success'},"label":"Nom de l'aliment"})}}</div>
    </div>
    <div class="col-6">
        {{form_widget(form)}}
    </div>
    <button type="submit" class="btn btn-primary"> enregister</button>
    {{form_end(form)}}
</div>



</div>

{% endblock %}
